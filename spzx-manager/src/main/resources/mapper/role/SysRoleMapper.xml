<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="com.rui.spzx.manager.mapper.SysRoleMapper">
    <!-- 正片开始-->
    <resultMap id="sysRoleMap" type="com.rui.spzx.model.entity.system.SysRole" autoMapping="true"/>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>
<!--    角色列表-->
    <select id="findByPage" resultMap="sysRoleMap">
        select <include refid="columns"/>
        from sys_role
        <where>
            <if test="roleName != null and roleName !=''">
                and role_name like concat('%',#{roleName},'%')
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>
    <select id="findAllRoles" resultMap="sysRoleMap">
        select <include refid="columns" />
        from sys_role where is_deleted = 0
    </select>

    <!--    角色添加-->
    <insert id="save">
        insert into sys_role (
            id,
            role_name,
            role_code,
            description
        ) values (
                    #{id},
                    #{roleName},
                    #{roleCode},
                    #{description}
                )
    </insert>
<!--    修改角色-->
    <update id="updateSysRole">
        update sys_role set
        <if test="roleName != null and roleName != ''">
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''">
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        update_time =  now()
        where
        id = #{id}
    </update>
<!--    角色删除-->
    <update id="deleteById">
        update sys_role set is_deleted = 1 where id = #{roleId}
    </update>
</mapper>